@model IEnumerable<Notic_board_2.Models.Announcment2>

@{
    ViewBag.Title = "MyAnnoncment";
    Layout = "~/Views/Shared/_LayoutHomePageTeacher.cshtml";
    ViewBag.colSize = "col-md-6";


}

<h2>MyAnnoncment</h2>


    <div class="well">
    <form role="form">

        <div class="form-group">
            <textarea class="form-control" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <hr>
</div>


@foreach (var item in Model)
{


    <div class="panel panel-default ">

        <h3>  @item.title <br /> </h3>

        <div class="panel-body">

            <div class="media">
                <div class="media-left">
                    <a href="#">
                        <img  id="image"class="media-object" src="~/images/dummy.jpg" width="64" height="64" alt="pic">
                    </a>
                </div>
                <div class="media-body">
                 
                    @item.description
                   
                </div>
            </div>


        </div>


     
        <p>
            <div class="text-left btn btn-primary"> @item.NoOfLikes  Likes </div>

            <div class="text-right">
                @Html.ActionLink("Edit", "MyAnnouncementEdit", "Teacher", new { @class = "btn btn-primary", name = "Id" })
                @Html.ActionLink("Delete", "MyAnnouncementDelete", "Teacher", new { @class = "btn btn-primary" })




            </div>
        </p>


        <div class="panel-footer">

                <h4>Leave a Comment:</h4>
                <!-- <form role="form" action="/Home/IsertComment">   -->
                <form role="form">

                    <div class="form-group">
                        <textarea class="form-control" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            <hr>

            @for (int j = 0; j < 3; j++)
            {
                <div class="media">
                    <div class="media-left">
                        
                        <a href="#">
                            <img class="media-object" src="~/images/dummy.jpg" width="64" height="64" alt="pic">
                        </a>
                    </div>
                    <div class="media-body">
                        This is comment @j
                    </div>
                </div>
              <hr>
            }

            <hr>

        </div>

    </div>

    <br />
}



